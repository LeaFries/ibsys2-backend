<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="003-production-table" author="">
        <createSequence sequenceName="production_id_seq"/>
        <createTable tableName="production">
            <column name="id" type="bigint" defaultValueSequenceNext="production_id_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="article" type="integer"/>
            <column name="quantity" type="integer"/>
        </createTable>
    </changeSet>

</databaseChangeLog>