<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="011-productionPlan-table" author="">
        <createSequence sequenceName="production_plan_id_seq"/>
        <createTable tableName="production_plan">
            <column name="id" type="bigint" defaultValueSequenceNext="production_plan_id_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="article" type="integer">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="period_n" type="integer"/>
            <column name="period_n_plus_one" type="integer"/>
            <column name="period_n_plus_two" type="integer"/>
            <column name="period_n_plus_three" type="integer"/>
        </createTable>
    </changeSet>

</databaseChangeLog>