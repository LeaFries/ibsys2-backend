<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="012-article_workstation_plan-table" author="">
        <createSequence sequenceName="awp_id_seq"/>
        <createTable tableName="article_workstation_plan">
            <column name="id" type="serial" defaultValueSequenceNext="awp_id_seq"/>
            <column name="articleNumber" type="number" />
            <column name="workstationNumber" type="number" />
        </createTable>

    </changeSet>

    <changeSet id="012-article_workstation_plan-table-primary-key" author="">

        <addPrimaryKey tableName="article_workstation_plan" columnNames="id" />

    </changeSet>

    <changeSet id="012-article_workstation_plan-table" author="">
        <insert tableName="article_workstation_plan">
            <column name="articleNumber" value="4" />
            <column name="workstationNumber" value="10" />
            <column name="workingTime" value="6" />
            <column name="setUpTime" value="20" />
        </insert>
        <insert tableName="article_workstation_plan">
            <column name="articleNumber" value="5" />
            <column name="workstationNumber" value="11" />
            <column name="workingTime" value="3" />
